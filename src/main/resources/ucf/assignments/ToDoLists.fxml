<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.ToDoListsController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="214.0" text="To-Do Lists!" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0" BorderPane.alignment="CENTER">
         <Button lineSpacing="10.0" mnemonicParsing="false" onAction="#onCreateNewListClick"
                 text="Create New To-Do List"/>
         <Button mnemonicParsing="false" onAction="#onLoadToDoListClick" text="Load To-Do List"/>
      </VBox>
   </center>
</BorderPane>
